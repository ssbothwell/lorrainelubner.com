<% title "Paintings" %>
<div class="gallery">
<% for painting in @paintings %>
<div class="picture span-4">
  <%= link_to image_tag(painting.photo.url(:small)), painting %><br />
  <%=h painting.title %><br />
  <%=h painting.description %>
  <%=h painting.year %><br />
</div>
<% end %>


<div class="span-16">
	<%= will_paginate @paintings %>
<% if current_user %>
  <%= link_to "New Painting", new_painting_path, :class => "crud" %>
<% end %>
</div>
</div>
